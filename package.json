{
  "name": "@dcyfr/ai-rag",
  "version": "1.0.0",
  "description": "RAG (Retrieval-Augmented Generation) system template - DCYFR AI starter",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./loaders": {
      "import": "./dist/loaders/index.js",
      "types": "./dist/loaders/index.d.ts"
    },
    "./stores": {
      "import": "./dist/stores/index.js",
      "types": "./dist/stores/index.d.ts"
    },
    "./pipeline": {
      "import": "./dist/pipeline/index.js",
      "types": "./dist/pipeline/index.d.ts"
    }
  },
  "files": [
    "dist",
    "docs",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "type-check": "tsc --noEmit",
    "example:basic": "tsx examples/basic-rag/index.ts",
    "example:search": "tsx examples/semantic-search/index.ts",
    "example:qa": "tsx examples/qa-system/index.ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build && npm run test:run",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "release": "npm run build && changeset publish"
  },
  "keywords": [
    "ai",
    "rag",
    "retrieval",
    "embeddings",
    "vector-search",
    "semantic-search",
    "llm",
    "dcyfr",
    "template"
  ],
  "author": "DCYFR",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dcyfr/dcyfr-ai-rag.git"
  },
  "homepage": "https://github.com/dcyfr/dcyfr-ai-rag#readme",
  "bugs": {
    "url": "https://github.com/dcyfr/dcyfr-ai-rag/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "zod": "^3.22.4"
  },
  "peerDependencies": {
    "@dcyfr/ai": "^1.0.4",
    "chromadb": "^1.8.0"
  },
  "peerDependenciesMeta": {
    "@dcyfr/ai": {
      "optional": true
    },
    "chromadb": {
      "optional": true
    }
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.10",
    "@types/node": "^20.11.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.56.0",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
